@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron hidden-sm hidden-xs">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="well visible-lg">
    <h1>Should only display on large resolutions</h1>    
    <p class="alert alert-danger">ASP.NET<span class="badge">2016</span> is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-6 col-md-push-3">
        <div class="">
            <button id="showModal" class="btn btn-danger">Click me!</button>
        </div>
    </div>        
</div>

<div id="theModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Hello!</h4>
            </div>
            <div class="modal-body"><p>This is a Bootstrap modal in an ASP.NET MVC application.</p></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script>
        $(function () {
            var showModal = function () {
                $("#theModal").modal("show");
            };

            $("#showModal").click(showModal);
        });
    </script>    
        
}

